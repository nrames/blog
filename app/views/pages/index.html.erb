<h1>Pages</h1>

<% if @pages.any? %>

  <% @pages.each do |page| %>
    <h3>
      <%= link_to page.title, page_path(page) %>
    </h3>
  <% end %>

<% else %>

  <h4>No Pages, Please Create One!</h4>

<% end %>

